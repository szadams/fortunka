<% title "Show fortune" %>

<% if notice -%>
<div id="notice"><%= notice %></div>
<% end -%>

<article class="single">
  <div class="attribute">
    <span class="name">Quotation</span>
    <span class="value"><%= @fortune.quotation %></span>
  </div>
  <div class="attribute">
    <span class="name">Source</span>
    <span class="value"><%= @fortune.source %></span>
  </div>
  <div class="link">
    <%= link_to 'Edit', edit_fortune_path(@fortune), class: "btn primary" %>
    <%= link_to 'Back', fortunes_path, class: "btn primary" %>
  </div>
</article>
